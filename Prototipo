  <script>
    function curtir(botao) {
      let conteudo = botao.textContent.split(' ');
      let num = parseFloat(conteudo[1].replace('M', '')) * 1000000;
      num += 1; // adiciona 1 curtida
      botao.textContent = `${conteudo[0]} ${Math.round(num / 1000)/1000}M`;
    }
  </script>
